    "@typescript-eslint/parser": "^8.56.0",
    "@vitejs/plugin-react": "^4.7.0",
    "concurrently": "^9.2.1",
    "electron": "^40.4.1",
    "electron-builder": "^26.8.1",
    "electron-icon-builder": "^2.0.1",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "pngjs": "^7.0.0",
    "prettier": "^3.8.1",
    "sharp": "^0.34.5",
    "typescript": "^5.9.3",
    "vite": "^5.4.21",
